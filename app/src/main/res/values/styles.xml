<resources>

    <!-- iOS-like theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>




    <!-- Button style -->
    <style name="iOSButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

        <style name="iOSEditText">
            <item name="android:background">@drawable/rounded_inputfield</item>
            <item name="android:textColor">@color/primary_blue</item>
            <item name="android:paddingLeft">20dp</item>
            <item name="android:paddingRight">20dp</item>
            <item name="android:paddingTop">15dp</item>
            <item name="android:paddingBottom">15dp</item>
            <item name="android:textSize">18sp</item> <!-- Larger text size -->
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">match_parent</item>
        </style>


    <!-- Text style for headers -->
    <style name="iOSHeaderText">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iOSSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="hintEnabled">true</item>
        <item name="android:background">@drawable/rounded_inputfield</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


</resources>
