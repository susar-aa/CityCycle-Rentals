<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="10dp"
    app:cardElevation="8dp"
    android:background="@drawable/rounded_background"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/promoIcon"
        android:layout_width="76dp"
        android:layout_height="70dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:contentDescription="Promo Icon"
        android:src="@drawable/discount_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/promoCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="Promo Code"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/promoIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/discountPercentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Discount"
        android:textSize="17sp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/promoCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/promoIcon"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/startdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Starting Date"
        android:textSize="17sp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/discountPercentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/promoIcon"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/validdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ending Date"
        android:textSize="17sp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/startdate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/promoIcon"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>