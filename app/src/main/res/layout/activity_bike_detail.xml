<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".BikeDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bike Image Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bikeImageCard"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:id="@+id/bikeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/error_placeholder_image"
                android:background="@drawable/round_corner" />
        </androidx.cardview.widget.CardView>

        <!-- Bike Info Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bikeInfoCard"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Bike Name -->
                <TextView
                    android:id="@+id/bikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bike Name"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <!-- Bike Type -->
                <TextView
                    android:id="@+id/bikeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bike Type"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <!-- Station Name -->
                <TextView
                    android:id="@+id/stationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station Name"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <!-- Availability Status -->
                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rent Now Button -->
        <Button
            android:id="@+id/rentButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rent Now"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:cornerRadius="12dp"/>

        <!-- Pricing Section -->
        <LinearLayout
            android:id="@id/pricingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@color/white">

            <!-- Hourly Price Card -->
            <androidx.cardview.widget.CardView
                android:id="@id/hourlyPriceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/priceHourly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hourly: Rs 5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="30sp"
                        android:src="@drawable/icons8_clock_100"
                        app:tint="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Daily Price Card -->
            <androidx.cardview.widget.CardView
                android:id="@id/dailyPriceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/priceDaily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily: Rs 15"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="30sp"
                        android:src="@drawable/icons8_new_year_calendar_100"
                        app:tint="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Monthly Price Card -->
            <androidx.cardview.widget.CardView
                android:id="@id/monthlyPriceCard"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/priceMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly: Rs 50"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="30sp"
                        android:src="@drawable/icons8_month_view_100"
                        app:tint="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Reserved Times Section -->
        <TextView
            android:id="@+id/reservedtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserved Times"
            android:background="@color/primary_blue"
            android:padding="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Reserved Times RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reservedTimesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
