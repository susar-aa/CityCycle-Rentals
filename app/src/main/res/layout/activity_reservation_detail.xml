<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#f7f7f7">

    <!-- Title -->
    <TextView
        android:id="@+id/reservationDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#276fc3"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Reservation ID -->
    <TextView
        android:id="@+id/reservationDetailsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservation ID: Example ID"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Bike Name -->
    <TextView
        android:id="@+id/bikeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bike Name: Example Bike"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Start Date -->
    <TextView
        android:id="@+id/startDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Date: 2025-02-01"
        android:textSize="16sp"
        android:textColor="#777777"
        android:layout_marginBottom="8dp" />

    <!-- End Date -->
    <TextView
        android:id="@+id/endDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Date: 2025-02-05"
        android:textSize="16sp"
        android:textColor="#777777"
        android:layout_marginBottom="8dp" />

    <!-- Total Price -->
    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price: $50.00"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Confirmed"
        android:textSize="16sp"
        android:textColor="#4caf50"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Reservation"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- Button to return to the previous screen -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:onClick="onBackPressed"
        android:layout_marginBottom="16dp" />

</LinearLayout>
