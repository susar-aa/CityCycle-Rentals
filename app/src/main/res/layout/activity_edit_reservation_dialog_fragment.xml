<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <!-- ScrollView to make the layout scrollable -->
    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/title_editreservation"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/avenir_black"
                android:gravity="center"
                android:text="Edit Reservation"
                android:textAlignment="center"
                android:textColor="@color/primary_blue"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Card for Form Fields -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <!-- Full Name Field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Full Name"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_inputfield"
                        android:hint="Enter your full name"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- Contact Number Field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Contact Number"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etContactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_inputfield"
                        android:hint="Enter your contact number"
                        android:inputType="phone"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- NIC Field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="NIC"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etNIC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_inputfield"
                        android:hint="Enter NIC"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- Start Date Field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Start Date and Time"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_inputfield"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Pick start date and time"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- End Date Field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="End Date and Time"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_inputfield"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Pick end date and time"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- Total Price Field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Total Price"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_inputfield"
                        android:hint="Enter total price"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- Discount Field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Discount"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_inputfield"
                        android:hint="Enter discount"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- Status Spinner -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Status"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spStatus"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_spinner"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- Payment Method Spinner -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Payment Method"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_spinner"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/rounded_button_secondary"
                            android:padding="12dp"
                            android:text="Cancel"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btnSave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button"
                            android:padding="12dp"
                            android:text="Save"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </android.widget.ScrollView>
</androidx.cardview.widget.CardView>
